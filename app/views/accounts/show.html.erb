
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <h5 class="text-center">Order Detail</h5>
        </div>
        <div class="card-body">
            <table class="table">
              <thead>
                <th>Item Name</th>
                <th>Qty</th>
                <th>Disc</th>
                <th>Amount</th>
              </thead>
              <tbody>
                <% @order_item.each do |item| %>
                  <tr>
                    <td><%= item.product.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= @order.discount %></td>
                    <td><%= item.unit_price %></td>
                  </tr>
                <% end %>
                <tr>
                  <td>Total: <%= @order.total_items %></td>
                  <td><%= @order.total_items %></td>
                  <td><%= @order.discount %></td>
                  <td><%= @order.total %></td>
                </tr>

                <tr>
                  <td>Gross Total</td>
                  <td></td>
                  <td></td>
                  <td><%= @order.total %></td>
                </tr>
                <tr>
                  <td>Discount</td>
                  <td></td>
                  <td></td>
                  <td><%= @order.discount %></td>
                </tr>
                <tr>
                  <td>Total Bill</td>
                  <td></td>
                  <td></td>
                  <td><%= @order.total %></td>
                </tr>
              </tbody>
            </table>
        </div>
      </div>
      <%= link_to '<- Back', accounts_path, class:'nav-link' %>
      <br>
    </div>
  </div>
</div>


