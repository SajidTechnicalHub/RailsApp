<%= pluralize @visit_count, 'time' %>
<%= debug session[:cart] %>

<div class="container">
  <div class="card">
    <h5 class="card-header">Products</h5>
     <div class="row">
      <% @products.each do |product| %>
       <div class="col-lg-3 col-md-12 my-2">
        <div class="card" style="tyle:'max-width: 250px; max-height: 250px; '">
            <% if product.avatar.attached? %>
                <%= link_to image_tag(product.avatar, style:'max-width: 250px; max-height: 250px; display: block; margin-left: auto; margin-right: auto;'), product_path(product) %>
              <% end %>
            <div class="card-body">
              <h6 class="card-title"> <%= link_to product.name, product %> | Rs: <%= product.price %></h6>
              <h6>Category: <%= link_to product.category.name, category_path(product.category)  %></h6>
              <p class="card-text"><small class="text-muted">Last updated on <%=product.updated_at %></small></p>

              <% if user_signed_in? && current_user.status == 'moderator' %>
                    <center> <%= link_to 'Edit', edit_product_path(product) %> |
                    
                    <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'More Details', product %> </center>
                   <% else %>
                   <center><%= link_to 'More Details', product %> </center>
                   
              <% end %>
   
            </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <nav aria-label="justify-content-cente">
    <ul class="pagination">
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1">Previous</a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item active">
        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
      </li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
</nav>
</div>
