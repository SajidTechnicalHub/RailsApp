  <div class="row">
    <div class="col-lg-8 col-md-4 justify-content-center align-items-center">
      <div class="row ">
        <div class="col-12 justify-content-center align-items-center">
          <div class="card">
            <div class="card-body">
              <div class="card-deck">

               <div class="card">
                  <%= image_tag(@product.avatar, class:"card-img-top") %>
              </div>
              <div class="card">
