                <%= image_tag(@product.avatar, class:"card-img-top") %>
              </div>
            </div>
          </div>
        </div>
    </div>
  <div class="row col-12">
    <div class="col-12 m-2">
    <div class="average-review-rating" data-score= "<%= @average_rating %>"></div>
    <span>Based on <%= @product.ratings.count  %> reviews.</span><br>
    </div>
  </div>
  <div class="row col-12">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-8"><h4>Details</h4></div>
            <div class="col-4 mb-2 ">
              <%= form_for @order_item, remote: true do |f| %>
                <%= f.hidden_field :product_id, :value => @product.id %>
                <%= f.hidden_field :quantity, :value => 1, :min => 1 %>
                <%= f.submit 'Add to Cart', class: 'btn btn-warning' %>
              <% end %>
            </div>
          </div>
          
          <table class="table">
            <thead>
              <tr >
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
              </tr>
            </thead>
            <tr>
              <td><%= @product.name %></td>
              <td><%= @product.price %></td>
              <td><%= @product.category.name %></td>
            </tr>
          </table>
          <hr style="width:100%; ">
          <h4>Description</h4>
          <p><%= @product.desc %></p>
        </div>
      </div>
    </div>   
  </div>

  </div>
    </div>
    <div class="col-lg-4 ">
      <h4>Product Review</h4>
      <h4>Title:<%=@product.name  %></h4>
        <% if @product.ratings.blank? %>
          <p>NO Review Yet! </p>
        <% else %>
          <% @product.ratings.each do |r| %>
          <p>Review
            <div class="star-rating" data-score = "<%= r.rating %>"> </div></p>
            <p><span>Comments: </span><%= r.comment %></p>
            <p><%= link_to 'Edit', edit_product_rating_path(r)%>| <%= link_to 'Delete', product_rating_path(r.id), method: :delete%> </p>
            <hr>
          <% end %>
         <% end %>
         
          <%= link_to 'Write a Review', new_product_rating_path(@product) %> 
    </div>
  </div>
</div>



